	<div class = "form-group-1">
		<h2>COMMENT</h2>
		<div class="form-group">
			<form action="/guest/insert" method="post">
				<textarea id="message" name="message" rows="4" cols="50" maxlength='90'></textarea>
				<div class="submit-button-container">
					<input type="submit" class="submit-button" value="제출">
				</div>
			</form>
		</div>
		<% if(locals.data){ %>
			<% for(let i=0;i<data.length;i++){ %>
				<div class="form-group">
					<textarea id="message" name="message" rows="4" cols="50" maxlength = '90' readonly style="pointer-events: none;"><%= data[i].content %></textarea>
				</div>
			<% } %>
		<% } %>
	
	</div>
	
</body>
