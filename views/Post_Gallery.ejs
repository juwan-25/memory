        <div class="ranking">
            <ul class="slides">
                <% for(let i = 0; i < 10; i++) { %>
                    <li>
                        <a href="">
                            <div class="numberRectangle"><%= i + 1 %></div>
                            <img src="ff.jpg" alt="">
                            <div class="preview">
                                <p class=title>생애 첫 비행기의 기억</p>
                                <p class="detail">그 때는 제가 처음 가족들과 여행을 갔던 때였어요.<br>
                                    번아웃이 와서 정말 힘들었었는데, 언니가 직접 표를 끊고
                                    같이 여행이나 가자고 한 게 시작이었어요...</p>
                            </div>
                        </a>
                    </li>
                <% } %>
                </ul>
                <p class="controller">
                    <span class="prev">&lang;</span>
                    <span class="next">&rang;</span>
                </p>
                <script>
                    const slides = document.querySelector('.slides'); //전체 슬라이드 컨테이너
                    const slideImg = document.querySelectorAll('.slides li'); //모든 슬라이드
                    let currentIdx = 0; //현재 슬라이드 index
                    let slideWidth = 440;   //슬라이드 너비 초기값
                    const slideCount = slideImg.length; // 슬라이드 개수
                    const prev = document.querySelector('.prev'); //이전 버튼
                    const next = document.querySelector('.next'); //다음 버튼

                    function setSlideWidth() {
                        const windowWidth = window.innerWidth;  //현재 창의 너비

                        if(windowWidth <= 479) {
                            slideWidth = 314;   //모바일 화면에서의 너비
                        } else {
                            slideWidth = 440;   //PC 화면에서의 너비
                            slideCount = slideCount - 2;
                        }
                    }

                    //전체 슬라이드 컨테이너 넓이 설정
                    slides.style.width = slideWidth * slideCount + 'px';

                    function moveSlide(num) {
                        slides.style.left = -num * slideWidth + 'px';
                        currentIdx = num;
                    }

                    prev.addEventListener('click', function () {
                        // 첫 번째 슬라이드는 이전 버튼 눌러도 아무런 반응 없도록
                        if (currentIdx !== 0) moveSlide(currentIdx - 1);
                    });

                    next.addEventListener('click', function () {
                        // 마지막 슬라이드는 다음 버튼 눌러도 아무런 반응 없도록
                        if (currentIdx !== slideCount - 1) moveSlide(currentIdx + 1);
                    });

                    window.addEventListener('resize', setSlideWidth);

                    setSlideWidth();
                </script>
        </div>
